	"authors": [
		{
			"name": "Clemens Husung (Wolfsblvt)",
			"homepage": "http://www.pinkes-forum.de/",
			"email": "wolfsblvt@gmx.de",
			"role": "Developer"
		}
	],
	"require": {
		"php": ">=5.4.0"
	},
	"extra": {
		"display-name": "Maximum Signature Lines",
		"soft-require": {
			"phpbb/phpbb": ">=3.1.0,<3.2.*@dev"
		},
		"version-check": {
			"host": "pinkes-forum.de",
			"directory": "/dev/maximumsignaturelines",
			"filename": "version.json"
		}
	}
